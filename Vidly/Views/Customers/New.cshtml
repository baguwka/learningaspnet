@model Vidly.Models.Customer
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Create", "Customers"))
{
   <div class="form-group">
      @Html.LabelFor(customer => customer.Name)
      @Html.TextBoxFor(customer => customer.Name, new {@class = "form-control"})
   </div>
   <div class="form-group">
      @Html.LabelFor(customer => customer.Birtday)
      @Html.TextBoxFor(customer => customer.Birtday, new { @class = "form-control" })
   </div>
   <div class="checkbox">
      <label>
         @Html.CheckBoxFor(customer => customer.IsSubscribedToNewsletter) Subscribed to Newsletter
      </label>
   </div>
}


