@model Vidly.ViewModels.CustomersViewModel
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

Customer
@if (!Model.Customers.Any())
{
   <text>No customers.</text>
}
else
{
   <ul>
      @foreach (var customer in Model.Customers)
      {
         <li>@customer.Name</li>
      }
   </ul>
}

