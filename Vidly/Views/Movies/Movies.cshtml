@model Vidly.ViewModels.MoviesViewModel
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@if (!Model.Movies.Any())
{
   <h2>There's no movies yet.</h2>
}
else
{
   <ul>
      @foreach (var movie in Model.Movies)
      {
         <li>@movie.Name</li>
      }
   </ul>
}

